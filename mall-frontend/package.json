{
  "name": "litemall-admin",
  "version": "1.0.0",
  "description": "litemall-admin basing on vue-element-admin 4.3.0",
  "author": "linlinjava <linlinjava@163.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build --mode production",
    "build:prod": "vue-cli-service build --mode production",
    "build:dep": "vue-cli-service build --mode deployment",
    "preview": "node build/index.js --preview",
    "lint": "eslint --ext .js,.vue src",
    "test:unit": "jest --clearCache && vue-cli-service test:unit",
    "test:ci": "npm run lint && npm run test:unit",
    "svgo": "svgo -f src/icons/svg --config=src/icons/svgo.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "vue",
    "admin",
    "dashboard",
    "element-ui",
    "boilerplate",
    "admin-template",
    "management-system"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linlinjava/litemall.git"
  },
  "bugs": {
    "url": "https://github.com/linlinjava/litemall/issues"
  },
  "dependencies": {
    "@tinymce/tinymce-vue": "4.0.0",
    "lodash": "^4.17.21",
    "v-charts": "1.19.0",
    "axios": "0.21.1",
    "clipboard": "2.0.6",
    "connect": "3.7.0",
    "echarts": "5.0.2",
    "element-ui": "2.15.0",
    "file-saver": "2.0.5",
    "js-cookie": "2.2.1",
    "normalize.css": "8.0.1",
    "nprogress": "0.2.0",
    "path-to-regexp": "6.2.0",
    "screenfull": "5.1.0",
    "script-loader": "0.7.2",
    "vue": "2.6.12",
    "vue-count-to": "1.0.13",
    "vue-router": "3.5.1",
    "vuex": "3.6.2",
    "xlsx": "0.16.9"
  },
  "devDependencies": {
    "@babel/core": "7.12.17",
    "@babel/register": "7.12.13",
    "@vue/cli-plugin-babel": "4.5.11",
    "@vue/cli-plugin-eslint": "^4.5.11",
    "@vue/cli-plugin-unit-jest": "4.5.11",
    "@vue/cli-service": "4.5.11",
    "@vue/test-utils": "1.1.3",
    "autoprefixer": "^8.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "26.6.3",
    "chalk": "4.1.0",
    "chokidar": "3.5.1",
    "connect": "3.7.0",
    "eslint": "7.20.0",
    "eslint-plugin-vue": "7.6.0",
    "html-webpack-plugin": "5.2.0",
    "husky": "5.1.0",
    "lint-staged": "10.5.4",
    "runjs": "^4.4.1",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "script-ext-html-webpack-plugin": "2.1.5",
    "serve-static": "^1.14.1",
    "svg-sprite-loader": "5.2.1",
    "svgo": "2.0.3",
    "vue-template-compiler": "2.6.12"
  },
  "engines": {
    "node": ">=8.9",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
